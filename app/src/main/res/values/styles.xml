<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  Home content CardView style  -->
    <style name="Widget.UniKey.HomeContent.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardElevation">18dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_height">202dp</item>
        <item name="android:layout_width">170dp</item>
    </style>

    <!--   Home content items style   -->
    <style name="Widget.UniKey.HomeContent.Item" parent="Widget.Material3.CardView.Outlined">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">122dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/home_img_items_bg</item>
    </style>

    <!-- Home content items TextView style -->
    <style name="Base.Widget.UniKey.TextView" parent="Base.Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <!-- Home content items ImageView style -->
    <style name="Base.Widget.UniKey.ImageView" parent="Base.Widget.AppCompat.ImageButton">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <!--  Login Input text filed style -->
    <style name="Widget.UniKey.TextInputLayout.OutlinedBox" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="placeholderTextColor">@color/md_theme_light_outline</item>
    </style>

</resources>